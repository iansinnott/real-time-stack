global-reset()

// Typography {{{
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

@require 'typographic'

@require 'typographic'

// Typographic defaults, just for reference.
$line-height-ratio  = 1.75
$header-ratio       = $golden
$body-font          = $helvetica
$body-font-weight   = 300
$body-color         = #666
$header-font        = $helvetica
$header-font-weight = 500
$header-color       = #111
$min-font           = 13px
$max-font           = 20px
$min-width          = 600px
$max-width          = 1000px
$vertical-rhythm    = true

// Custom Typographic styling
$line-height-ratio  = 1.5
$body-font-weight   = 400

// Typographic styles only apply within a content class
.content
  typographic()

// }}} END Typography

// Vars {{{
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

mono = Consolas, 'Liberation Mono', Menlo, Courier, monospace

light-gray = #E7E6E4
off-white = #EDEDEF
border-gray = #979797
text-black = #5F5F5F

vspace = 25px

// }}} END Vars

// General {{{
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

*
  box-sizing border-box

body
  background off-white
  color text-black
  font-family $body-font

li
  list-style disc

strong
  font-weight bold

pre
  font-family mono
  line-height 1.5
  border-radius 3px
  border 1px solid border-gray

a
  color blue
  text-decoration none
  &:hover
    text-decoration underline

// }}} New General Styles

.temp
  padding 20px
  border red
  color red

.container
  padding 0 20px

.app
  background off-white

.header
  display none // TEMP
